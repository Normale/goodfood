# Database Configuration
DATABASE_URL=postgresql://goodfood_user:goodfood_pass@localhost:5432/goodfood
POSTGRES_USER=goodfood_user
POSTGRES_PASSWORD=goodfood_pass
POSTGRES_DB=goodfood

# Anthropic API
ANTHROPIC_API_KEY=your-api-key-here

# MCP Server
OPENFOODFACTS_MCP_URL=http://localhost:3000

# Workflow Settings
MAX_ITERATIONS=5
APPROVAL_THRESHOLD=80
CONFIDENCE_THRESHOLD=0.7

# LLM Models
ESTIMATOR_MODEL=claude-3-5-haiku-latest
CRITIC_MODEL=claude-3-5-haiku-latest

# Embeddings (optional, for future use)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Logging
LOG_LEVEL=INFO
